<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the background color of the search bar -->
    <solid android:color="#FFFFFF" />

    <!-- Set the corner radius to make the background rounded -->
    <corners android:radius="16dp" />

    <!-- Optional: Set padding inside the background -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />

    <!-- Optional: Add a slight shadow or elevation effect -->
    <size android:height="48dp" />

    <!-- Border for the background (optional) -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />
</shape>
